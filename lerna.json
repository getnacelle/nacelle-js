{
  "packages": ["packages/*", "starters/*", "examples/*", "reference-stores/*"],
  "version": "independent",
  "npmClient": "npm",
  "command": {
    "version": {
      "allowBranch": "main",
      "message": "chore(release): %s"
    },
    "publish": {
      "allowBranch": "main",
      "ignoreChanges": [
        "*.md",
        ".gitignore",
        "**/**/**.test.*",
        "**/.storybook/**"
      ]
    }
  }
}
